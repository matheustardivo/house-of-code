<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New product</title>
  </head>
  <body>
    <h1>New product</h1>

    <% if (errors.length) { %>
      <div class="errors">
        <p>We encountered errors while trying to save your product:</p>
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <form action="/products" method="post">
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Book title"
               value="<%= product.title %>" />
      </div>

      <div>
        <label for="description">Description</label>
        <textarea cols="20" rows="10" id="description"
                  placeholder="Book description" name="description"><%= product.description %></textarea>
      </div>

      <div>
        <label for="price">Price</label>
        <input type="text" id="price" name="price" placeholder="Book price"
               value="<%= product.price %>" />
      </div>

      <input type="submit" value="Create" />
    </form>
  </body>
</html>
